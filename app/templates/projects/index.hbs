<h2>Here are your projects!</h2>

{{#each project in model}}
  <div class="project-item">
    <h3 class="project-title">
      {{#link-to 'projects.edit' project.id}}
        {{project.name}} <span class="project-arrow">&nbsp; &#9654;</span>
      {{/link-to}}
    </h3>
    <p>{{project.description}}</p>
    <button {{action 'deleteProject' project.id}} class="splash-button--DELETE">Delete</button>
  </div>
{{/each}}

{{#link-to 'projects.new'}}
  <div class="splash-button--LEFT">Add Project</div>
{{/link-to}}
